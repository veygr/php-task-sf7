{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-center">
            <div class="w-full max-w-4xl">
                <div class="flex justify-between items-center mb-6">
                    <h1 class="text-2xl font-bold">Candidate</h1>
                </div>
                <div class="bg-white shadow-md rounded-lg overflow-hidden p-6">
                    {{ form_start(form, {'attr': {'class': 'space-y-4', 'novalidate':'novalidate'}}) }}
                    {{ form_errors(form) }}
                    <div class="mb-4">
                        {{ form_label(form.firstName, 'Candidate first name', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                        {{ form_widget(form.firstName, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                        {{ form_errors(form.firstName, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.lastName, 'Candidate last name', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                        {{ form_widget(form.lastName, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                        {{ form_errors(form.lastName, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.email, 'Candidate email', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                        {{ form_errors(form.email, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>

                    <div class="flex items-center justify-between mt-6">
                        {{ form_widget(form.submit, {'attr': {'class': 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline'}}) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

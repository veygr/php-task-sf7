{% extends 'base.html.twig' %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-center">
        <div class="w-full max-w-4xl">
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-2xl font-bold">ATS projects</h1>
            </div>
            <div class="bg-white shadow-md rounded-lg overflow-hidden p-6">
                {{ form_start(form, {'attr': {'class': 'space-y-4', 'novalidate':'novalidate'}}) }}
                    {{ form_errors(form) }}
                    <div class="mb-4">
                        {{ form_label(form.name, 'Project name', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                        {{ form_errors(form.name, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.manager, 'Project manager', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                        {{ form_widget(form.manager, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                        {{ form_errors(form.manager, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.active, 'Project active', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                        {{ form_widget(form.active, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                        {{ form_errors(form.active, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>

                    <div class="flex items-center justify-between mt-6">
                        {{ form_widget(form.submit, {'attr': {'class': 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline'}}) }}
                        <a href="{{ path('ats_projects') }}" class="text-blue-500 hover:text-blue-700">
                            Back to list
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

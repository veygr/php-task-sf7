{% extends 'base.html.twig' %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-center">
        <div class="w-full max-w-4xl">
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-2xl font-bold">ATS projects</h1>
            </div>
            <div class="bg-white shadow-md rounded-lg overflow-hidden p-6">
                <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
                    <tbody class="divide-y divide-gray-200">
                        <tr>
                            <th class="pr-6 pl-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider bg-gray-100 w-1/3">Name</th>
                            <td class="pr-6 pl-4 py-4 text-sm font-medium text-gray-900">{{ project.name }}</td>
                        </tr>
                        <tr>
                            <th class="pr-6 pl-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider bg-gray-100 w-1/3">Manager</th>
                            <td class="pr-6 pl-4 py-4 text-sm text-gray-500">{{ project.manager ? project.manager.fullName : 'No manager assigned' }}</td>
                        </tr>
                        <tr>
                            <th class="pr-6 pl-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider bg-gray-100 w-1/3">Active</th>
                            <td class="pr-6 pl-4 py-4 text-sm text-gray-500">{{ project.active ? 'Yes' : 'No' }}</td>
                        </tr>
                        <tr>
                            <th class="pr-6 pl-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider bg-gray-100 w-1/3">Created Date</th>
                            <td class="pr-6 pl-4 py-4 text-sm text-gray-500">{{ project.createdAt ? project.createdAt|date('Y-m-d H:i:s') : 'N/A' }}</td>
                        </tr>
                        <tr>
                            <th class="pr-6 pl-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider bg-gray-100 w-1/3">Updated Date</th>
                            <td class="pr-6 pl-4 py-4 text-sm text-gray-500">{{ project.updatedAt ? project.updatedAt|date('Y-m-d H:i:s') : 'N/A' }}</td>
                        </tr>
                    </tbody>
                </table>
                <div class="flex items-center justify-between mt-6">
                    <a href="{{ path('ats_project_edit', {'id':project.id}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                        Edit project
                    </a>
                    <a href="{{ path('ats_projects') }}" class="text-blue-500 hover:text-blue-700">
                        Back to list
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

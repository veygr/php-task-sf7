{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-center">
            <div class="w-full max-w-4xl">
                <div class="flex justify-between items-center mb-6">
                    <h1 class="text-2xl font-bold">ATS projects</h1>
                    <a href="{{ path('ats_project_new') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-3 rounded">
                        Create ATS project
                    </a>
                </div>
                <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
                    <thead class="bg-gray-100">
                        <tr>
                            <th class="py-3 px-4 text-left font-semibold text-gray-700">ID</th>
                            <th class="py-3 px-4 text-left font-semibold text-gray-700">Name</th>
                            <th class="py-3 px-4 text-left font-semibold text-gray-700">Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for project in projects %}
                            <tr class="border-t hover:bg-gray-50">
                                <td class="py-3 px-4">{{ project.id }}</td>
                                <td class="py-3 px-4">{{ project.name }}</td>
                                <td class="py-3 px-4">
                                    <a href="{{ path('ats_project', {'id':project.id}) }}" class="text-blue-500 hover:text-blue-700 mr-2">Details</a>
                                    <a href="{{ path('ats_project_delete', {'id':project.id}) }}" class="text-blue-500 hover:text-blue-700 mr-2">Delete</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="py-4 px-4 text-center text-gray-500">No ATS projects found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
